{% extends 'base.html.twig' %}

{% block title %}Subir Archivo{% endblock %}
{% block body %}
    <h1>Subir Archivo</h1>

    {{ form_start(uploadForm) }}
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
        </div>
        <div class="custom-file">
            {{ form_widget(uploadForm.file, {'attr':{'class': 'custom-file-input', 'id':'inputGroupFile01', 'aria-describedby':'inputGroupFileAddon01'}}) }}
            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
        </div>
    </div>

    <button type="button" class="btn btn-outline-primary">Subir</button>
    {{ form_end(uploadForm) }}
    <a class="btn btn-outline-warning" href="{{ path('download') }}">Descargar</a>
{% endblock %}

